<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".TestMainActivity">

    <TextView
        android:id="@+id/tv_screenrecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20x"
        android:gravity="center"
        android:text="启动录屏"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_screenrecord2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20x"
        android:gravity="center"
        android:text="停止录屏"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20x"
        app:layout_constraintStart_toStartOf="@+id/tv_screenrecord"
        app:layout_constraintTop_toBottomOf="@+id/tv_screenrecord" />

    <TextView
        android:id="@+id/tv_screenrecord3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20x"
        android:gravity="center"
        android:text="删除所有的文件"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20x"
        app:layout_constraintStart_toStartOf="@+id/tv_screenrecord2"
        app:layout_constraintTop_toBottomOf="@+id/tv_screenrecord2" />

    <Chronometer
        android:id="@+id/tv_screenrecord4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20x"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20x"
        app:layout_constraintStart_toStartOf="@+id/tv_screenrecord3"
        app:layout_constraintTop_toBottomOf="@+id/tv_screenrecord3" />


</androidx.constraintlayout.widget.ConstraintLayout>