<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_testbg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="layer-list实现 测试背景1"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_shadowbg" />

    <TextView
        android:id="@+id/tv_testbg2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="layer-list实现 测试背景2"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_testbg"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_shadowbg" />

    <TextView
        android:id="@+id/tv_testbg3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="elevation实现 测试背景3"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_testbg2"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        android:elevation="50dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_testbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_testbg3">

        <TextView
            android:id="@+id/tv_testbg4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CardView实现 测试背景4"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>