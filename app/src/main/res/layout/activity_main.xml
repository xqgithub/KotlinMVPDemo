<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.ui.activities.MainActivity">

    <TextView
            android:id="@+id/tv_test"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="接口请求测试"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_20x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_test2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="接口请求,无条件轮询，间隔一段时间就请求一次"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_10x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toBottomOf="@+id/tv_test"/>

    <TextView
            android:id="@+id/tv_test3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="接口请求,有条件轮询"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_10x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toBottomOf="@+id/tv_test2"/>

    <TextView
            android:id="@+id/tv_test4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="网络请求嵌套回调"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_10x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toBottomOf="@+id/tv_test3"/>

    <TextView
            android:id="@+id/tv_test5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="网络请求出错重连"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_10x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toBottomOf="@+id/tv_test4"/>

    <TextView
            android:id="@+id/tv_test6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/deimen_30x"
            android:text="测试SP文件数据"
            android:gravity="center"
            android:layout_marginTop="@dimen/deimen_10x"
            android:layout_marginLeft="@dimen/deimen_20x"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="@dimen/deimen_16x"
            app:layout_constraintTop_toBottomOf="@+id/tv_test5"/>

</androidx.constraintlayout.widget.ConstraintLayout>